<include file="Common/header"/>
	
	<div class="clearfix full-container">
		<div class="container-fluid">
			<div class="row">
				<!-- 左侧导航菜单开始 -->
				<include file="Common/left"/>
				<!-- 左侧导航菜单结束 -->

				<div id="main" class="col-xs-12 col-sm-10 main">
					<!-- 面包屑导航 -->
					<ul class="breadcrumb">
						<li><i class="fa fa-map-marker"></i></li>
						<volist name="__PARENT_MENU__" id="vo">
					        <li>{$vo.title}</li>
					    </volist>
					</ul>
										
					<div class="builder builder-form-box">   
						<div class="builder-container builder-form-container">
							<div class="row">
								<div class="col-xs-12">
									<form action="" method="post" class="form builder-form">
										<div class="form-group item_id ">
											<div class="controls">
												<input type="hidden" class="form-control input" name="id" value="{$_GET['aid']}">
											</div>
										</div>
										<div class="form-group item_title ">
											<label class="item-label label_100">手机号码</label>
											<div class="controls">
												<input type="text" class="form-control input text" name="mobile" value="{$info.u_mobile}">
											</div>
										</div>
										<div class="form-group item_url ">
											<label class="item-label label_100">新密码</label>
											<div class="controls">
												<input type="text" class="form-control input text" name="pwd" value="">
											</div>
										</div>
										<div class="form-group item_icon ">
											<label class="item-label label_100">确认密码</label>
											<div class="controls">
												<input type="text" id="_icon_5" class="form-control input icon-choosen" name="cfm_password" value="">
											</div>
										</div>
										<div class="form-group item_sort ">
											<label class="item-label label_100">备注</label>
											<div class="controls">
												<input type="text" class="form-control input icon-choosen" name="remark" value="{$info.u_remark}">
											</div>
										</div>
										<div class="form-group item_sort ">
											<label class="item-label label_100">类型</label>
											<div class="controls">
												<select name="type" class="form-control select">
													<option value="10" <eq name='info.u_type' value='10'>selected</eq>>平台管理人员</option>
													<option value="20" <eq name='info.u_type' value='20'>selected</eq>>商家用户</option>
												</select> 
											</div>
										</div>
										<div class="form-group item_sort ">
											<label class="item-label label_100">状态</label>
											<div class="controls">
												<select name="status" class="form-control select">
													<option value="1" <eq name='info.status' value='1'>selected</eq>>启用</option>
													<option value="0" <eq name='info.status' value='0'>selected</eq>>禁用</option>
												</select> 
											</div>
										</div>
										<div class="form-group item_sort ">
											<label class="item-label label_100">所属角色</label>
											<div class="controls">
												<!--<input type="text" class="form-control input num" name="role_id" value="">-->
												<volist name='role' id='vo'>
													<label style='width:85px;'><input name='role[]' type='checkbox' value='{$vo.id}' <in name='vo.id' value='$role_id'>checked</in>/>{$vo.name}</label>
													</br>
												</volist>
											</div>
										</div>
									</form>
									<div class="form-group">
										<button class="btn btn-primary submit ajax-post visible-md-inline visible-lg-inline" type="submit" target-form="builder-form">提交</button>
										<button class="btn btn-default return visible-md-inline visible-lg-inline" onclick="javascript:history.back(-1);return false;">返回</button>
									</div>
								</div>
							</div>
						</div>    
					</div>
					
				</div>
			</div>
		</div>
	</div>
	<!-- footer开始 -->
<include file="Common/footer"/>
<!-- footer结束 -->
</body>