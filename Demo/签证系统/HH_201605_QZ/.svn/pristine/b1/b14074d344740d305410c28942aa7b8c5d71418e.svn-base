<include file="Common/header"/>
<div class="clearfix full-container">
    <div class="container-fluid">
        <div class="row">
            <!-- 左侧导航菜单开始 -->
            <include file="Common/left"/>
            <!-- 左侧导航菜单结束 -->

            <!-- 页面主体内容开始 -->
            <div id="main" class="col-xs-12 col-sm-10 main">
                <!-- 面包屑导航开始 -->
                <ul class="breadcrumb">
                    <li><i class="fa fa-map-marker"></i></li>
                    <volist name="__PARENT_MENU__" id="vo">
                        <li>{$vo.title}</li>
                    </volist>
                </ul>
                <!-- 面包屑导航结束 -->

                <!-- 数据列表 -->
                <div class="builder builder-form-box">
                    <div class="builder-container builder-form-container">
                        <div class="row">
                            <div class="col-xs-12">
                                <form id="add" class="form-horizontal" action="{:U('Admin/User/add')}" method="post">
                                    <div class="form-group">
                                        <label class="control-label col-sm-3">姓名</label>
                                        <div class="col-sm-7">
                                            <input name="u_name" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3">英文名</label>
                                        <div class="col-sm-7">
                                            <input name="u_ename" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3">性别</label>
                                        <div class="col-sm-7">
                                            <select name="u_sex" class="form-control">
                                                <option value="0">女</option>
                                                <option value="1">男</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3">身份证号</label>
                                        <div class="col-sm-7">
                                            <input name="u_code" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3">联系电话</label> 
                                        <div class="col-sm-7">
                                            <input name="u_mobile" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3">地址</label>
                                        <div class="col-sm-7">
                                            <input name="u_address" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3">账号</label>
                                        <div class="col-sm-7">
                                            <input name="u_username" type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3">角色</label>
                                        <div class="col-sm-7">
                                            <select name="u_role" class="form-control">
                                                <foreach name="role" item="vo">
                                                    <option value="{$key}">{$vo}</option>
                                                </foreach>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3">密码</label>
                                        <div class="col-sm-7">
                                            <input name="u_pwd" type="password" class="form-control pwd" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3">确认密码</label>
                                        <div class="col-sm-7">
                                            <input type="password" class="form-control pwd" />
                                        </div>
                                    </div>
                                    <div class="form-group text-center">
                                        <a  class="btn btn-primary" id="submit">保存</a>
                                        <a class="btn btn-default" onclick="javascript:history.back(-1)">返回</a>
                                    <div>
                                </form>
                            </div>
                        </div><!-- end row -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 底部区域开始 -->
    <include file="Common/footer"/>
    <!-- 底部区域结束 -->
<script>
$(function(){
    $('#submit').click(function(){
        var inputs = $('input');
        for (var i = 0; i < inputs.length; i++) {
            if (inputs.eq(i).val().trim() == '') {
                inputs.eq(i).focus();
                return false;
            }
        }
        var pwd = $('.pwd');
        if (pwd.eq(0).val() != pwd.eq(1).val()) {
            layer.msg('两次密码不一致!', {'icon': 2});
            return false;
        }
        $(this).addClass('disabled');
        var that = $(this);
        $.post("{:U('Admin/User/add')}",$('#add').serialize(),function(data){
            if (data.status == 1) {
                layer.msg(data.info, {'icon': 1}, function(){
                    window.location.href = data.url;
                });
            } else {
                $(that).removeClass('disabled');
                layer.msg(data.info, {'icon': 2});
            }
        });
    });
});
</script>
</body>
</html>